#!/bin/sh
# Pre-push hook to run build check before pushing to git

echo "ğŸ” Running pre-push build check..."

# Run the build command
npm run build

# Check if build was successful
if [ $? -eq 0 ]; then
    echo "âœ… Build successful! Proceeding with push..."
    exit 0
else
    echo "âŒ Build failed! Please fix the errors before pushing."
    exit 1
fi
